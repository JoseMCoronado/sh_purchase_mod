<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.act_window" id="action_purchase_line_fix_picking">
      <field name="auto_search" eval="True"/>
      <field name="context">{}</field>
      <field name="groups_id" eval="[(6, 0, [])]"/>
      <field name="limit">80</field>
      <field name="name">Line Fix Transfer</field>
      <field name="res_model">purchase.line.fix.picking</field>
      <field name="target">new</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_id" eval="False"/>
      <field name="view_ids" eval="[(6, 0, [])]"/>
      <field name="view_mode">form</field>
      <field name="view_type">form</field>
    </record>

    <record model="ir.ui.view" id="view_line_fix_picking_form">
        <field name="name">Fix lines from Line</field>
        <field name="model">purchase.line.fix.picking</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="product_fix_moves" nolabel="1">
                        <tree editable="top" create="0">
                            <field name="move_id" invisible="1"/>
                            <field name="picking_id" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="create_fix" string="Fix" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
